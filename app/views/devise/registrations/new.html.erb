<div class = "main_header">
</div>

<div class = "signup_page">
  <div class = "new_title" >会員情報入力</div>

  <%= form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>

    <div class="field">
      <%= f.label :ニックネーム %><span class = form_require>必須</span><br />
      <%= f.text_field :nickname, class: "input_box" %>
    </div>

    <div class="field">
      <%= f.label :お名前 %><span class = form_require>必須</span><br />
      <%= f.text_field :first_name, class: "input_box__half"%>
      <%= f.text_field :last_name, class: "input_box__half"%>
    </div>

    <div class="field">
      <%= f.label :"お名前(カナ)" %><span class = form_require>必須</span><br />
      <%= f.text_field :first_name_kana, class: "input_box__half"%>
      <%= f.text_field :last_name_kana, class: "input_box__half"%>
    </div>

      <div class="field">
      <%= f.label :生年月日 %><span class = form_require>必須</span><br />
      <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
    </div>

    <div class="field">
      <%= f.label :email %><span class = form_require>必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_box" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
      <% end %><span class = form_require>必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input_box" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード(確認)" %><span class = form_require>必須</span><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_box" %>
    </div>

    <div class = "actions" >
      <%= f.submit "次へ進む", class: "red_btn" %>
    </div>
  <% end %>
</div>

<div class = "main_footer" >
</div>